a(data-toggle="modal", data-target="#ModalExample")

div.modal.fade(tabindex="-1", role="dialog", aria-labelledby="#ModalExampleLabel")#ModalExample
	div.modal-dialog(role="document")
		div.modal-content
			div.modal-header
				button.close(type="button", data-dismiss="modal", aria-label="Close")
					span(aria-hidden="true") &times;
				h4.heading.modal-title#ModalExampleLabel
			div.modal-body